{% extends 'base.html.twig' %}

{% block content %}

    <div class="row">
        <div class="col-lg-12 text-center">
            <h1>Ongoing Lotteries</h1>
            <ul>
                {% for lottery in ongoing_lotteries %}
                    <li class="list-unstyled">
                        <a href="{{ path('lottery_show', { 'id': lottery.id }) }}">{{ lottery.name }}</a>
                    </li>
                {% endfor %}
            </ul>
        </div>
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12 text-center">
            <h1>Already ended</h1>
            <ul>
                {% for lottery in closed_lotteries %}
                    <li class="list-unstyled">
                        <a href="{{ path('lottery_show', { 'id': lottery.id }) }}">{{ lottery.name }}</a>
                    </li>
                {% endfor %}
            </ul>
        </div>
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12 text-center">
            <h1>Previous winners</h1>
            <ul>
                {% for lottery in closed_lotteries %}
                    <li class="list-unstyled">
                        <strong> {{lottery.winner}} - </strong> <a href="{{ path('lottery_show', { 'id': lottery.id }) }}">{{ lottery.name }}</a>
                    </li>
                {% endfor %}
            </ul>
        </div>
    </div>
    <!-- /.row -->
{% endblock %}
