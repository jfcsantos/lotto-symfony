{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form action="{{ path("fos_user_security_check") }}" method="post" class="form-signin">
    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

    <h2 class="form-signin-heading">Please sign in</h2>

    <label for="username" class="sr-only">{{ 'Password'|trans }}</label>
    <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" class="form-control"/>

    <label for="password" class="sr-only">{{ 'Password'|trans }}</label>
    <input type="password" id="password" name="_password" required="required" class="form-control"/>

    <input type="submit" id="_submit" name="_submit" value="{{ 'Sign in'|trans }}" class="btn btn-lg btn-primary btn-block" />
    <input type="hidden" name="_target_path" value="{{ app.request.query.get('ref_path') }}" />

</form>

<a type="button" href="{{ path('fos_user_registration_register') }}?ref_path={{ app.request.query.get('ref_path') }}">Register</a>
